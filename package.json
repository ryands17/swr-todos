{
  "name": "swr-todos",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "4.12.3",
    "@material-ui/icons": "4.11.2",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.2",
    "@types/react": "17.0.27",
    "@types/react-dom": "17.0.9",
    "axios": "0.24.0",
    "clsx": "1.1.1",
    "immer": "9.0.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.24.5",
    "react-scripts": "4.0.2",
    "todomvc-app-css": "2.4.1",
    "typescript": "4.4.4"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "prod": "run-p start:server run:client",
    "dev:client": "craco start",
    "dev:server": "json-server --watch db.json -p 3001",
    "build": "craco build",
    "postbuild": "cd build && cat sw.js >> service-worker.js",
    "start:client": "npx serve -s build",
    "start": "run-p start:client dev:server",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "cy:test": "dotenv -- cypress open",
    "eject": "react-scripts eject",
    "postinstall": "husky install"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "6.4.0",
    "@types/json-server": "0.14.4",
    "@types/prettier": "2.4.1",
    "craco-workbox": "0.2.0",
    "cypress": "8.7.0",
    "dotenv-cli": "4.1.0",
    "husky": "7.0.4",
    "json-server": "0.16.3",
    "lint-staged": "11.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "typesync": "0.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,md}": "prettier --write"
  }
}
